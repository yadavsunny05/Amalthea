<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frag4"
    android:background="@color/exi">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                >
            <TextView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="0dp"
                android:text="EXHIBITION"
                android:fontFamily="@font/pt_sans_bold"
                android:gravity="center"

                android:textAlignment="center"

                android:textColor="@android:color/white"
                android:textSize="60sp"
                android:background="@drawable/gradiant_exi_list"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/cardview_light_background"
                android:elevation="10dp"

                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/pt_sans"
                    android:text="EXHIBITION"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="36sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"

                >
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans"
                android:textColor="@android:color/black"                android:text="Amalthea strives to enlighten young minds through technology. Through our innovative exhibition, we seek to present the prowess of knowledge.

    On the lines of the theme this year, Integrating Technologies, the exhibition promises to feature exhibits explaining the important aspect of integration among various technologies as well as subsequent creations stemming from them."
                android:textAlignment="center"
                android:textSize="18sp" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/exhi_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"

                android:id="@+id/button_subscribe"
                android:text="SUBSCRIBE NOW"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:elevation="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/gradiant_button"
                android:background="@drawable/shape_but"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>