<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    app:layout_constraintBaseline_toBaselineOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="parent"
    tools:context=".frag4"
    android:background="@color/conclave"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"
                >
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"
                >
            <TextView
                android:id="@+id/imageView51"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/gradiant_list_conclave"

                android:fontFamily="@font/pt_sans_bold"
                android:gravity="center"
                android:text="CONCLAVE"
                android:textAlignment="center"

                android:textColor="@android:color/white"
                android:textSize="60sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"
                >
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"
                >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans"
                android:layout_margin="5dp"
                android:text="About the Conclave "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="36sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"
                >
            <TextView
                android:id="@+id/bac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_end_color"
                android:fontFamily="@font/pt_sans"
                android:text='The Conclave at Amalthea aims to spread the power of ideas and perseverance. It seeks to host discourse on concepts, experiences, challenges and their unique solutions, so as to spread knowledge and foster innovation, inquisitiveness and creativity among the masses.  The Conclave shall feature visionary thinkers, pioneers and leaders from various fields sharing their experiences, expertise and research with an aspiring audience over the course of the two days. They shall cover the theme this year, "Integrating Technologies".The talks shall lay emphasis on the immense potential that is in this interdisciplinary amalgamation and its power to realise the endless possibilities in field of science and technology to improve the lives of millions of people around the globe.'
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"

                android:textSize="18sp"
                tools:background="@color/grey" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"
                >
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/pt_sans"
                android:text="Present Year"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="36sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                app:fastScrollEnabled="false" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:background="@color/cardview_light_background"
                >
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans"
                android:text="Past Speakers"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="36sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".5"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"

                android:id="@+id/button_subscribe"
                android:text="SUBSCRIBE NOW"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:elevation="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/gradiant_button"
                android:background="@drawable/shape_but"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!-- TODO: Update blank fragment layout -->

</LinearLayout>